{
  "extends": "@ttoss/config/tsconfig.json",
  "compilerOptions": {
    "incremental": false, // Do not create tsconfig.tsbuildinfo
    "outDir": "dist",
    "noEmit": false,
    "declaration": false,
    "downlevelIteration": true,
    "target": "es2018",
    "module": "commonjs"
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
